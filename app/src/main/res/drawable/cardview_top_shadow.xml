<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <padding android:top="0dp" android:right="0dp" android:bottom="0dp" android:left="0dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <item>
        <shape>
            <padding android:top="5dp" android:right="0dp" android:bottom="0dp" android:left="0dp"/>
            <gradient
                android:startColor="#353535"
                android:endColor="#ffffff"
                android:angle="90"
                />
            <corners android:radius="0dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <padding android:top="3dp" android:right="0dp" android:bottom="0dp" android:left="0dp"/>
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#ffffff"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
</layer-list>